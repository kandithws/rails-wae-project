<h2>Please Fill up Your additional information</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <% if !@current_anonymous_user.nil? %>

        <div class="form-group">
          <%= f.label :username %><br/>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, value: @current_anonymous_user.email,
                            readonly: true, autofocus: true,
                            style: 'background-color: #E7E7E7;', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %><br/>
          <%= f.text_field :first_name, value: @current_anonymous_user.first_name,
                           readonly: true, style: 'background-color: #E7E7E7;', class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br/>
          <%= f.text_field :last_name, value: @current_anonymous_user.last_name,
                           readonly: true, style: 'background-color: #E7E7E7;', class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :cell_phone_no %><br/>
          <%= f.text_field :cell_phone_no, class: "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
        </div>


        <div class="form-group">
          <%= f.label :profession %>
          <%= f.select :profession, options_for_select(["Student", "Staff", 'Faculty']), class: "form-control" %>
        </div>


        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
    <% end %>
<% end %>